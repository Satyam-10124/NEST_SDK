# NEST SDK Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Required: Anthropic API Key
# ============================================
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-api-key-here

# ============================================
# Registry URLs
# ============================================
# NANDA agent registry URL
NEST_REGISTRY_URL=http://registry.nanda.ai

# MCP registry URL (optional)
MCP_REGISTRY_URL=

# ============================================
# Agent Configuration
# ============================================
# Default agent ID (will be suffixed with random hex)
AGENT_ID=my-agent

# Agent display name
AGENT_NAME=My Agent

# Agent domain/specialization
AGENT_DOMAIN=general assistance
AGENT_SPECIALIZATION=helpful AI assistant
AGENT_DESCRIPTION=I am a helpful AI assistant

# Agent capabilities (comma-separated)
AGENT_CAPABILITIES=general assistance,Python,cloud deployment

# ============================================
# Server Configuration
# ============================================
# Port for agent server
PORT=6000

# Public URL for agent registration (if deploying)
PUBLIC_URL=

# ============================================
# Optional: Smithery (for MCP)
# ============================================
# Smithery API key for MCP server authentication
SMITHERY_API_KEY=

# ============================================
# Optional: AWS Deployment
# ============================================
# AWS credentials (for deployment)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# ============================================
# Monitoring & Logging
# ============================================
# Enable telemetry
ENABLE_TELEMETRY=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
